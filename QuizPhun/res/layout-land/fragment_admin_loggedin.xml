<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_admin_newadminaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_admin_newquestion"
        android:layout_centerHorizontal="true"
        android:onClick="buttonDeleteQuestionClicked"
        android:text="@string/delete_question" />

    <Button
        android:id="@+id/button_admin_newquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_admin_newadminaccount"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_admin_newadminaccount"
        android:layout_marginTop="32dp"
        android:onClick="buttonNewQuestionClicked"
        android:text="@string/new_question" />

</RelativeLayout>
